@using Proyecto.Models;
@model Tema
@{
    ViewBag.Title = "Index";
}
<div>
    <h1><b>Administración del portal</b></h1>
</div>
<hr />
<div>
    <h2><b>Tema</b></h2>
</div>
@using (Html.BeginForm("GuardarTema", "Admin", new AjaxOptions { HttpMethod = "POST" }))
{
    <form>
        @Html.Hidden("id", plataforma.idTema, new { })
        <div class="form-group">
            <label>
                Nombre <span class="req">*</span>
            </label>
            @Html.TextArea("nombre", plataforma.nombre, new { @Class = "form-control", @placeholder = "", @Id = "txtNombre" })
        </div>
        <div class="form-group">
            <label>
                Descripcion <span class="req">*</span>
            </label>
            @Html.TextArea("descripcion", plataforma.descripcion, new { @Class = "form-control", @placeholder = "", @Id = "txtDescripcion" })
        </div>
        <div class="form-group">
            <label>
                Imagen <span class="req">*</span>
            </label>
            @Html.TextBox("imagen", plataforma.imagen, new { @Class = "form-control", @placeholder = "", @Id = "txtimagen" })
        </div>
        <div class="form-group">
            <label>
                Estado <span class="req">*</span>
            </label>
            @Html.CheckBox("estado", plataforma.estado, new { @Class = "form-control", @placeholder = "", @Id = "txtestado" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
}

