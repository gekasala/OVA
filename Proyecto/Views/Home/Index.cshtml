@using Proyecto.Models;
@model plataforma
@{
    ViewBag.Title = "Proyecto OVA";
}
@if (Model != null)
{
<hr />
<center>
    <h1 class="tm-hero-title"><b>@Model.nombreTema</b></h1>
</center>
<hr />
<div class="row">
    @if (Model.imagenTema != null)
    {
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <img src="~/Archivos/@Model.imagenTema" width="100%" />
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">            
            @Html.Raw(@Model.descripcionTema)
        </div>
    }
    else
    {
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h4>@Model.descripcionTema</h4>
        </div>
    }

</div>   
}

