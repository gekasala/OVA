@*@model Dictionary<string, Usuario[]>*@
@model Usuario
@{Usuario us = (Usuario)Session["Usuario"];}
@using Proyecto.Models;
@{
    ViewBag.Title = "Registrar";
}
<script>
    $(document).ready(function () {
        $(this).val()

    }
</script>
<h2>Registar usuario</h2>

<!-- Registrarse -->
<div class="row">
    <div class="container">
        @using (Html.BeginForm("RegistrarUsuario", "Home", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "registrarse" }))
        {
            @Html.Hidden("idRol", "", new { @Class = "form-control", @Id = "txtidRol", @Value = 3 })
            @Html.Hidden("estado", "", new { @Class = "form-control", @Id = "txtestado", @Value = 1 })
            <div class="fila-arriba">
                <div class="form-group">
                    <label>
                        Nombre
                    </label>
                    @Html.TextBox("nombre", "", new { @Class = "form-control", @placeholder = "Digite Nombre", @Id = "txtnombre", @data_value = "nombre", required = "required" })
                </div>

                <div class="form-group">
                    <label>
                        Apellido
                    </label>
                    @Html.TextBox("apellidos", "", new { @Class = "form-control", @placeholder = "Digite Apellidos", @Id = "txtapellidos", @data_value = "apellidos", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <label>
                    Usuario <span class="req">*</span>
                </label>
                @Html.TextBox("userName", "", new { @Class = "form-control", @placeholder = "Digite Usuario", @Id = "txtuserName", @data_value = "userName", required = "required" })
            </div>
            <div class="form-group">
                <label>
                    Email <span class="req">*</span>
                </label>
                @Html.TextBox("correoElectronico", "", new { @type = "email", @Class = "form-control", @placeholder = "Digite Email", @Id = "txtcorreoElectronico", @data_value = "correoElectronico", required = "required" })
            </div>
            <div class="form-group">
                <label>
                    Nivel Educativo <span class="req">*</span>
                </label>
                @Html.DropDownList("nivelEstudio", (List<System.Web.Mvc.SelectListItem>)ViewBag.nivelEdu, "Seleccione...", new { @Class = "form-control form-control-sm", @title = "Nivel de Estudio", @value_data = "nivelEstudio", required = "required" })
            </div>
            <div class="form-group">
                <label>
                    Contraseña <span class="req">*</span>
                </label>
                @Html.Password("userPassword", "", new { @Class = "form-control", @placeholder = "Digite Contraseña", @Id = "txtuserPassword", @data_value = "userPassword", required = "required" })
            </div>

            <div class="form-group">
                <label>
                    Repetir Contraseña <span class="req">*</span>
                </label>
                @Html.Password("userPassword2", "", new { @Class = "form-control", @placeholder = "Digite Contraseña", @Id = "txtuserPassword2", @data_value = "userPassword", required = "required" })
            </div>
            <input type="submit" class="btn btn-primary btn-lg btn-block login-btn" value="Registrar">
        }
    </div> 
</div>